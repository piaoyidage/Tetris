
# 创建数据库
drop database if exists tetris_record;
create database tetris_record;

# 使用数据库
use tetris_record;

# 创建表
drop table if exists user_point;
create table user_point
(
	`id` int primary key auto_increment,
	`username` nvarchar(10) not null,
	`point` int not null,
	`type_id` int not null
);

# 清空表内容
delete from user_point;

# 插入数据
insert into user_point (`username`, `point`, `type_id`) values ("张三", 200, 1);
insert into user_point (`username`, `point`, `type_id`) values ("李三", 20, 1);
insert into user_point (`username`, `point`, `type_id`) values ("刘三", 150, 1);
insert into user_point (`username`, `point`, `type_id`) values ("胡三", 100, 1);
insert into user_point (`username`, `point`, `type_id`) values ("陈三", 1000, 1);
insert into user_point (`username`, `point`, `type_id`) values ("白三", 2000, 1);

# 选择按照分数排序的前五个用户信息
select username, point from user_point where type_id=1 order by point desc limit 5;

